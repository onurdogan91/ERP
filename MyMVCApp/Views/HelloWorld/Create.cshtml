@model MyMVCApp.Models.AnimalViewModel

@{
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Create a new dog</h5>
            </div>

            <div class="card-body">
            </div>

            <div class="card-footer">
            </div>




        </div>
        <form asp-controller="HelloWorld" asp-action="CreateDog" method="post">
            <div class="mb-3">
                <label class="form-label">Dog Name</label>
                <input asp-for=dog.Name type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Dog Age</label>
                <input asp-for=dog.Age type="number" class="form-control" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>

</div>